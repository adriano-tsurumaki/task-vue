{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "app/javascript/**/*", "app/javascript/**/*.vue"],
  "exclude": ["app/javascript/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/javascript/*"],
      "@/*": ["./app/javascript/*"],
      "@components/*": ["./app/javascript/components/*"],
      "@features/*": ["./app/javascript/components/features/*"],
      "@ui/*": ["./app/javascript/components/ui/*"],
      "@domain/*": ["./app/javascript/domain/*"],
      "@infra/*": ["./app/javascript/infrastructure/*"],
      "@utils": ["./app/javascript/lib/utils.ts"],
      "@lib/utils": ["./app/javascript/lib/utils.ts"],
      "@lib/*": ["./app/javascript/lib/*"],
      "@composables/*": ["./app/javascript/composables/*"]
    }
  }
}
